<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="java_lang_programming.com.android_layout_demo"
    android:layout_width="match_parent">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".flexbox.FlexboxDemoActivity"
            android:label="@string/title_activity_flexbox_demo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".article81.BottomSheetBehaviorActivity"
            android:label="@string/title_activity_bottom_sheet_behavior"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>